# JWT Secret for token signing
JWT_SECRET=your-jwt-secret-key-here

# Supabase Configuration
# Replace with your actual Supabase URL and anon key
# Leave empty or remove these lines to run in demo mode
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
# Service role key for backend operations (bypasses RLS)
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# Port for the server
PORT=3000

# API Base URL (update this when you deploy to production)
# For local development (use your computer's IP for phone testing):
API_BASE_URL=http://10.0.0.170:3000
# For production (example):
# API_BASE_URL=https://api.macroscope.info

# Email configuration (for email verification)
# Choose your email provider: 'ses', 'sendgrid', 'smtp'
EMAIL_PROVIDER=ses

# AWS SES Configuration (recommended for production)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
SES_FROM_EMAIL=noreply@macroscope.info
SES_FROM_NAME=MacroScope